{
  "name": "shield-and-shine-detailing",
  "version": "2.0.0",
  "description": "Professional mobile auto detailing website - performance optimized",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "build": "npm run minify && npm run optimize-images",
    "minify": "npm run minify:html && npm run minify:css && npm run minify:js",
    "minify:html": "html-minifier-terser --collapse-whitespace --remove-comments --minify-css true --minify-js true index.html -o dist/index.html",
    "minify:css": "cssnano styles.css dist/styles.css",
    "minify:js": "terser main.js -c -m -o dist/main.js",
    "optimize-images": "imagemin imgs/*.{jpg,png} --out-dir=dist/imgs",
    "create-webp": "imagemin imgs/*.{jpg,png} --out-dir=dist/imgs/webp --plugin=webp",
    "test": "npm run test:lighthouse && npm run test:links",
    "test:lighthouse": "lighthouse https://localhost:8000 --view",
    "test:links": "linkinator https://localhost:8000",
    "deploy:preview": "netlify deploy",
    "deploy:production": "netlify deploy --prod",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "auto detailing",
    "mobile detailing",
    "car wash",
    "redding ca"
  ],
  "author": "Shield & Shine Professional Detailing",
  "license": "MIT",
  "devDependencies": {
    "cssnano-cli": "^1.0.5",
    "html-minifier-terser": "^7.2.0",
    "imagemin-cli": "^7.0.0",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^11.0.0",
    "linkinator": "^5.0.0",
    "netlify-cli": "^17.0.0",
    "serve": "^14.2.0",
    "terser": "^5.24.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
